<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_drawer_listitem_height"
    android:background="@drawable/left_menu_bg_2">
 
    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/navigation_icon_width"
        android:layout_height="@dimen/navigation_icon_height"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="@dimen/navigation_icon_marginRight"
        android:contentDescription="@string/desc_list_item_icon"
        android:src="@drawable/ic_home"
        android:layout_centerVertical="true" />
 
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/icon"
        android:textColor="@color/list_item_title"
        android:textSize="@dimen/navigation_title_textSize"
        android:gravity="center_vertical"
        android:paddingRight="40dp"/>
     
